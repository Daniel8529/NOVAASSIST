                <TextBox x:Name="Pantallausuario" materialDesign:HintAssist.Hint="User" materialDesign:HintAssist.IsFloating="True" HorizontalAlignment="Left" Margin="89,93,0,0" VerticalAlignment="Top" Width="319" Height="89"
                        BorderBrush="Black" BorderThickness="2,2,2,2" VerticalContentAlignment="Center" FontSize="35" Background="white" />
                <PasswordBox x:Name="Pantalla" materialDesign:HintAssist.Hint="Password" materialDesign:HintAssist.IsFloating="True" HorizontalAlignment="Left" Margin="89,93,0,0" VerticalAlignment="Top" Width="319" Height="89"
                        BorderBrush="Black" BorderThickness="2,2,2,2" VerticalContentAlignment="Center" FontSize="35" Background="white" />

                <Button Content="Huella" HorizontalAlignment="Left" Margin="500,179,0,0" VerticalAlignment="Top" Click="Button_Click" Height="157" Width="175" FontSize="72" Foreground="{x:Null}">
                    <Button.Background>
                        <ImageBrush ImageSource="\Img\huella.png"/>
                    </Button.Background>
                </Button>
            
                <TextBox x:Name="Hora"  HorizontalAlignment="Left" Margin="482,95,0,0" VerticalAlignment="Top" FontSize="24"/>
        
            </Grid>

            <StackPanel Orientation="Vertical" Margin="10,100" HorizontalAlignment="Center" > 
                <Button Content="Â¿Eres admin? Iniciar sesion" HorizontalAlignment="Left"  VerticalAlignment="Top" Click="Button_Click_1" IsDefault="True" Background="White" Foreground="#FF0027FF" Height="34" Width="372"/>
            </StackPanel>

        </StackPanel>
    </Border>
</Window>