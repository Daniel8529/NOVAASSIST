            <Grid Name="Principal" Margin="10,34,0,0" HorizontalAlignment="Left" Width="816 "   >
                
                <Label Content="NOVAASSIST" HorizontalAlignment="Center" Margin="0,5,0,0" VerticalAlignment="Top" IsEnabled="False" FontSize="30" FontFamily="Arial" 
                    Foreground="Black" FontWeight="Bold" />

                <Button x:Name="boton1" Content="1" HorizontalAlignment="Left" Margin="89,189,0,0"  VerticalAlignment="Top" FontSize="20" Click="Button1" Width="100" Height="60"  FontFamily="Arial" Background="White" Style="{StaticResource MaterialDesignRaisedDarkButton}" materialDesign:ButtonAssist.CornerRadius="10" />
                <Button x:Name="boton2" Content="2" HorizontalAlignment="Left" Margin="198,189,0,0" VerticalAlignment="Top" FontSize="20" Click="Button2" Width="100" Height="60" FontFamily="Arial" Background="White" Style="{StaticResource MaterialDesignRaisedDarkButton}" materialDesign:ButtonAssist.CornerRadius="10" />
                <Button x:Name="boton3" Content="3" HorizontalAlignment="Left" Margin="308,189,0,0" VerticalAlignment="Top" FontSize="20" Click="Button3" Width="100" Height="60" FontFamily="Arial" Background="White" Style="{StaticResource MaterialDesignRaisedDarkButton}" materialDesign:ButtonAssist.CornerRadius="10" />
                <Button x:Name="boton4" Content="4" HorizontalAlignment="Left" Margin="89,257,0,0" VerticalAlignment="Top" FontSize="20" Click="Button4" Width="100" Height="60" FontFamily="Arial" Background="White" Style="{StaticResource MaterialDesignRaisedDarkButton}" materialDesign:ButtonAssist.CornerRadius="10" />
                <Button x:Name="boton5" Content="5" HorizontalAlignment="Left" Margin="198,257,0,0" VerticalAlignment="Top" FontSize="20" Click="Button5" Width="100" Height="60" FontFamily="Arial" Background="White" RenderTransformOrigin="0.823,0.486" Style="{StaticResource MaterialDesignRaisedDarkButton}" materialDesign:ButtonAssist.CornerRadius="10" />
                <Button x:Name="boton6" Content="6" HorizontalAlignment="Left" Margin="308,257,0,0" VerticalAlignment="Top" FontSize="20" Click="Button6" Width="100" Height="60" FontFamily="Arial" Background="White" Style="{StaticResource MaterialDesignRaisedDarkButton}" materialDesign:ButtonAssist.CornerRadius="10" />
                <Button x:Name="boton7" Content="7" HorizontalAlignment="Left" Margin="89,324,0,0" VerticalAlignment="Top" FontSize="20" Click="Button7" Width="100" Height="60" FontFamily="Arial" Background="White" Style="{StaticResource MaterialDesignRaisedDarkButton}" materialDesign:ButtonAssist.CornerRadius="10" />
                <Button x:Name="boton8" Content="8" HorizontalAlignment="Left" Margin="198,324,0,0" VerticalAlignment="Top" FontSize="20" Click="Button8" Width="100" Height="60" FontFamily="Arial" Background="White" Style="{StaticResource MaterialDesignRaisedDarkButton}" materialDesign:ButtonAssist.CornerRadius="10" />
                <Button x:Name="boton9" Content="9" HorizontalAlignment="Left" Margin="308,324,0,0" VerticalAlignment="Top" FontSize="20" Click="Button9" Width="100" Height="60" FontFamily="Arial" Background="White" Style="{StaticResource MaterialDesignRaisedDarkButton}" materialDesign:ButtonAssist.CornerRadius="10" />
                <Button x:Name="botonOK" Content="OK" HorizontalAlignment="Left" Margin="89,392,0,0" VerticalAlignment="Top" FontSize="20" Click="ButtonOK" Width="100" Height="60" FontFamily="Arial" Background="#FF2DFF00" Style="{StaticResource MaterialDesignRaisedDarkButton}" materialDesign:ButtonAssist.CornerRadius="10" />
                <Button x:Name="boton0" Content="0" HorizontalAlignment="Left" Margin="198,392,0,0" VerticalAlignment="Top" FontSize="20" Click="Button0" Width="100" Height="60" FontFamily="Arial" Background="White" Style="{StaticResource MaterialDesignRaisedDarkButton}" materialDesign:ButtonAssist.CornerRadius="10" />
                <Button x:Name="botonX" Content="X" HorizontalAlignment="Left" Margin="308,392,0,0" VerticalAlignment="Top" FontSize="20" Click="ButtonX" Width="100" Height="60" FontFamily="Arial" Background="Red" 
